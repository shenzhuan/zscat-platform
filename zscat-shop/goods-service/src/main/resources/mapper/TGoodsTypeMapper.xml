<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zscat.goods.dao.TGoodsTypeDao">

	<select id="get" resultType="com.zscat.goods.entity.TGoodsTypeDO">
		select `id`,`name`,`create_by`,`create_date`,`del_flag` from t_goods_type where id = #{value}
	</select>

	<select id="list" resultType="com.zscat.goods.entity.TGoodsTypeDO">
		select `id`,`name`,`create_by`,`create_date`,`del_flag` from t_goods_type
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_goods_type
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="name != null and name != ''"> and name = #{name} </if>
		  		  <if test="createBy != null and createBy != ''"> and create_by = #{createBy} </if>
		  		  <if test="createDate != null and createDate != ''"> and create_date = #{createDate} </if>
		  		  <if test="delFlag != null and delFlag != ''"> and del_flag = #{delFlag} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.zscat.goods.entity.TGoodsTypeDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_goods_type
		(
			`name`, 
			`create_by`, 
			`create_date`, 
			`del_flag`
		)
		values
		(
			#{name}, 
			#{createBy}, 
			#{createDate}, 
			#{delFlag}
		)
	</insert>
	 
	<update id="update" parameterType="com.zscat.goods.entity.TGoodsTypeDO">
		update t_goods_type 
		<set>
			<if test="name != null">`name` = #{name}, </if>
			<if test="createBy != null">`create_by` = #{createBy}, </if>
			<if test="createDate != null">`create_date` = #{createDate}, </if>
			<if test="delFlag != null">`del_flag` = #{delFlag}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_goods_type where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_goods_type where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>