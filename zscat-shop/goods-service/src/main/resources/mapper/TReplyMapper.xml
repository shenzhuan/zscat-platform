<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zscat.goods.dao.TReplyDao">

	<select id="get" resultType="com.zscat.goods.entity.TReplyDO">
		select `id`,`goodsid`,`content`,`createdate`,`status`,`userid`,`username` from t_reply where id = #{value}
	</select>

	<select id="list" resultType="com.zscat.goods.entity.TReplyDO">
		select `id`,`goodsid`,`content`,`createdate`,`status`,`userid`,`username` from t_reply
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="goodsid != null and goodsid != ''"> and goodsid = #{goodsid} </if>
		  		  <if test="content != null and content != ''"> and content = #{content} </if>
		  		  <if test="createdate != null and createdate != ''"> and createdate = #{createdate} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="userid != null and userid != ''"> and userid = #{userid} </if>
		  		  <if test="username != null and username != ''"> and username = #{username} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_reply
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="goodsid != null and goodsid != ''"> and goodsid = #{goodsid} </if>
		  		  <if test="content != null and content != ''"> and content = #{content} </if>
		  		  <if test="createdate != null and createdate != ''"> and createdate = #{createdate} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		  <if test="userid != null and userid != ''"> and userid = #{userid} </if>
		  		  <if test="username != null and username != ''"> and username = #{username} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.zscat.goods.entity.TReplyDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_reply
		(
			`goodsid`, 
			`content`, 
			`createdate`, 
			`status`, 
			`userid`, 
			`username`
		)
		values
		(
			#{goodsid}, 
			#{content}, 
			#{createdate}, 
			#{status}, 
			#{userid}, 
			#{username}
		)
	</insert>
	 
	<update id="update" parameterType="com.zscat.goods.entity.TReplyDO">
		update t_reply 
		<set>
			<if test="goodsid != null">`goodsid` = #{goodsid}, </if>
			<if test="content != null">`content` = #{content}, </if>
			<if test="createdate != null">`createdate` = #{createdate}, </if>
			<if test="status != null">`status` = #{status}, </if>
			<if test="userid != null">`userid` = #{userid}, </if>
			<if test="username != null">`username` = #{username}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_reply where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_reply where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>