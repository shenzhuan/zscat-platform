<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zscat.goods.dao.TFloorGoodsDao">

	<select id="get" resultType="com.zscat.goods.entity.TFloorGoodsDO">
		select `id`,`productid`,`floorid` from t_floor_goods where id = #{value}
	</select>

	<select id="list" resultType="com.zscat.goods.entity.TFloorGoodsDO">
		select `id`,`productid`,`floorid` from t_floor_goods
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productid != null and productid != ''"> and productid = #{productid} </if>
		  		  <if test="floorid != null and floorid != ''"> and floorid = #{floorid} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from t_floor_goods
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="productid != null and productid != ''"> and productid = #{productid} </if>
		  		  <if test="floorid != null and floorid != ''"> and floorid = #{floorid} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.zscat.goods.entity.TFloorGoodsDO" useGeneratedKeys="true" keyProperty="id">
		insert into t_floor_goods
		(
			`productid`, 
			`floorid`
		)
		values
		(
			#{productid}, 
			#{floorid}
		)
	</insert>
	 
	<update id="update" parameterType="com.zscat.goods.entity.TFloorGoodsDO">
		update t_floor_goods 
		<set>
			<if test="productid != null">`productid` = #{productid}, </if>
			<if test="floorid != null">`floorid` = #{floorid}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from t_floor_goods where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from t_floor_goods where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>